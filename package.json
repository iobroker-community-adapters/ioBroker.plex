  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "axios": "^1.12.2",
    "body-parser": "^1.19.0",
    "express": "^4.21.2",
    "fast-xml-parser": "^4.5.1",
    "multer": "^2.0.0",
    "plex-api": "^5.3.2",
    "tautulli-api": "^1.0.2",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
